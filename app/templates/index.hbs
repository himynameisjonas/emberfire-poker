<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label>Game name</label>
      {{input value=gameName class="form-control" placeholder="Sprint planning #13"}}
    </div>
    <div class="form-group">
      <label>Your name</label>
      {{input value=userName class="form-control" placeholder="John Doe"}}
    </div>
    {{#if error}}
      <div class="alert alert-warning">Please fill out the form</div>
    {{/if}}
    <button class="btn btn-primary btn-block" {{action 'newGame'}}>Create new Game</button>
  </div>
</div>
